<!DOCTYPE html>
<html>
<head>

  <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


  <nav>
    <div class="nav-wrapper">
      <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
      <ul class="left">
        <li>
          <a class="modal-trigger" href="#modal1">Sign In</a>
          <div id="modal1" class="modal" style="background: black">
            <div class="modal-content">
              <center><h4> Login </h4></center>

              <%= form_tag "/login", method: "post" do %>
              <%= text_field_tag :email, nil, required: true, placeholder: "Email"%></br>
              <%= password_field_tag :password, nil, required: true, placeholder: "Password"%></br>

            </div>
            <div class="modal-footer" style="background: darkgrey;">

              <a class="waves-effect waves-light btn" style="background: darkgreen">
                <div class="valign-wrapper" style="position: relative; bottom: 12px;">
                  <%= submit_tag "Login" %>
                  <i class="material-icons right">send</i>
                </div>
              </a>

              <% end %>
            </div>
          </div>
        </li>
        <li>
          <a class="modal-trigger" href="#modal2">Sign Up</a>
          <div id="modal2" class="modal" style="background: black">
            <div class="modal-content">
              <center><h4> Sign Up </h4></center>

              <%= form_tag "/login", method: "post" do %>
              <%= text_field_tag :email, nil, required: true, placeholder: "Email"%></br>
              <%= password_field_tag :password, nil, required: true, placeholder: "Password"%></br>

            </div>
            <div class="modal-footer" style="background: darkgrey;">

              <a class="waves-effect waves-light btn" style="background: darkgreen">
                <div class="valign-wrapper" style="position: relative; bottom: 12px;">
                  <%= submit_tag "Login" %>
                  <i class="material-icons right">send</i>
                </div>
              </a>

              <% end %>
            </div>
          </div>
        </li>
      </ul>
      <ul class="right hide-on-med-and-down">
        <li><a href="/">Conformation</a></li>
        <li><a href="/">Obedience</a></li>
        <li><a href="/">Herding</a></li>
        <li><a href="/">Rally</a></li>
        <li><a href="/">Agility</a></li>
      </ul>
      <ul class="side-nav" id="mobile-demo">
        <li><a href="/">Conformation</a></li>
        <li><a href="/">Obedience</a></li>
        <li><a href="/">Herding</a></li>
        <li><a href="/">Rally</a></li>
        <li><a href="/">Agility</a></li>
        <div class="row container sessionBox">
          <div class="col s6">
            <li><a href="/">Sign In</a></li>
          </div>
          <div class="col s6">
            <li><a href="/">Sign Up</a></li>
          </div>
        </div>
      </ul>
    </div>
  </nav>

  <div class="container row">
    <div class = "welcomeSec">
      <center><h1>Welcome to Norcal Corgies</h1></center>
      <center><p> Established since 1990</p></center>
    </div>
  </div>

  <div class="container row">
    <nav style="border-radius: 24px; background: darkgreen;">
      <ul>
        <li><a href="/">About Us</a></li>
        <li><a href="/">Rescue</a></li>
        <li><a href="/">Online Payment</a></li>
        <li><a href="/">Corgi Info</a></li>
        <li><a href="/">Events</a></li>
        <li><a href="/">Specialty</a></li>
        <li><a href="/">Gallery</a></li>
        <li><a href="/">News</a></li>
        <li><a href="/">Store</a></li>
      </ul>
    </nav>
  </div>

<%= yield %>

<footer class="page-footer">
  <div class="container">
    <div class="row">
      <div class="col l6 s12">
        <h5 class="white-text">Footer Content</h5>
        <p class="grey-text text-lighten-4">You can use rows and columns here to organize your footer content.</p>
      </div>
      <div class="col l4 offset-l2 s12">
        <h5 class="white-text">Links</h5>
        <ul>
          <li><a class="grey-text text-lighten-3" href="#!">Link 1</a></li>
          <li><a class="grey-text text-lighten-3" href="#!">Link 2</a></li>
          <li><a class="grey-text text-lighten-3" href="#!">Link 3</a></li>
          <li><a class="grey-text text-lighten-3" href="#!">Link 4</a></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="footer-copyright">
    <div class="container">
      Â© 2014 Copyright Text
      <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
    </div>
  </div>
</footer>

<script>
$(document).ready(function() {
  $(".button-collapse").sideNav();
  $('.modal-trigger').leanModal();
})
</script>

</body>
</html>
